export default function DatabaseDashboard() {
  const { user, logout } = useAuth()
  const { toast } = useToast()
  const [candidates, setCandidates] = useState<Candidate[]>([])
  const [stats, setStats] = useState<DashboardStats>({
    totalCandidates: 0,
    candidatesThisMonth: 0,
    candidatesWithCV: 0,
    topFramework: ''
  })
  const [loading, setLoading] = useState(true)
  const [error, setError] = useState<string | null>(null)
  const [showProfileMenu, setShowProfileMenu] = useState(false)

  // Close profile menu when clicking outside
  useEffect(() => {
    const handleClickOutside = (event: MouseEvent) => {
      const target = event.target as Element
      if (showProfileMenu && !target.closest('.profile-menu-container')) {
        setShowProfileMenu(false)
      }
    }

    document.addEventListener('mousedown', handleClickOutside)
    return () => document.removeEventListener('mousedown', handleClickOutside)
  }, [showProfileMenu])

  // Fetch candidates data
  const fetchCandidates = async () => {
    try {
      setLoading(true)
      const response = await fetch('/api/candidates')
      const data = await response.json()
      
      if (data.success) {
        setCandidates(data.candidates)
        calculateStats(data.candidates)
      } else {
        setError('Failed to fetch candidates')
      }
    } catch (err) {
      setError('Error fetching candidates')
      console.error('Error:', err)
    } finally {
      setLoading(false)
    }
  }

  // Calculate dashboard statistics
  const calculateStats = (candidatesData: Candidate[]) => {
    const now = new Date()
    const currentMonth = now.getMonth()
    const currentYear = now.getFullYear()
    
    const candidatesThisMonth = candidatesData.filter(candidate => {
      const createdDate = new Date(candidate.created_at)
      return createdDate.getMonth() === currentMonth && createdDate.getFullYear() === currentYear
    }).length

    const candidatesWithCV = candidatesData.filter(candidate => candidate.cv_filename).length

    // Find most popular framework
    const frameworkCounts: { [key: string]: number } = {}
    candidatesData.forEach(candidate => {
      frameworkCounts[candidate.main_framework] = (frameworkCounts[candidate.main_framework] || 0) + 1
    })
    
    const topFramework = Object.entries(frameworkCounts)
      .sort(([,a], [,b]) => b - a)[0]?.[0] || 'N/A'

    setStats({
      totalCandidates: candidatesData.length,
      candidatesThisMonth,
      candidatesWithCV,
      topFramework: formatEnumValue(topFramework)
    })
  }

  useEffect(() => {
    fetchCandidates()
  }, [])

  if (loading) {
    return (
      <div className="min-h-screen bg-gray-50 dark:bg-gray-900 flex items-center justify-center">
        <div className="text-center">
          <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600 mx-auto"></div>
          <p className="mt-4 text-gray-600 dark:text-gray-400">Loading dashboard...</p>
        </div>
      </div>
    )
  }

  if (error) {
    return (
      <div className="min-h-screen bg-gray-50 dark:bg-gray-900 flex items-center justify-center">
        <div className="text-center">
          <p className="text-red-600 dark:text-red-400">{error}</p>
          <button 
            onClick={fetchCandidates}
            className="mt-4 px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700"
          >
            Retry
          </button>
        </div>
      </div>
    )
  }

  return (
    <div className="min-h-screen bg-white dark:bg-gray-950 mt-20">
      <div className="max-w-10xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        {/* Floating Avatar */}
        <div className="fixed bottom-6 left-6 z-50">
          <div className="relative profile-menu-container">
            <button
              onClick={() => setShowProfileMenu(!showProfileMenu)}
              className="w-12 h-12 bg-gray-900 dark:bg-gray-100 text-white dark:text-gray-900 rounded-full flex items-center justify-center font-medium text-sm hover:shadow-lg transition-all duration-200 border-2 border-white dark:border-gray-900 shadow-lg"
            >
              {user?.name?.charAt(0) || 'A'}
            </button>
            
            {/* Profile Menu */}
            {showProfileMenu && (
              <div className="absolute bottom-16 left-0 w-64 bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-700 rounded-xl shadow-xl p-4 animate-in slide-in-from-bottom-2 duration-200">
                <div className="flex items-center gap-3 mb-4">
                  <div className="w-10 h-10 bg-gray-900 dark:bg-gray-100 text-white dark:text-gray-900 rounded-full flex items-center justify-center font-medium text-sm">
                    {user?.name?.charAt(0) || 'A'}
                  </div>
                  <div>
                    <p className="text-sm font-medium text-gray-900 dark:text-gray-100">
                      {user?.name}
                    </p>
                    <p className="text-xs text-gray-500 dark:text-gray-400 font-light">
                      {user?.email}
                    </p>
                  </div>
                </div>
                
                <div className="border-t border-gray-100 dark:border-gray-800 pt-3">
                  <button
                    onClick={() => {
                      logout()
                      setShowProfileMenu(false)
                    }}
                    className="w-full flex items-center gap-3 px-3 py-2 text-sm text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-100 hover:bg-gray-50 dark:hover:bg-gray-800 rounded-lg transition-all duration-200"
                  >
                    <LogOut className="h-4 w-4" />
                    <span className="font-light">Sign Out</span>
                  </button>
                </div>
              </div>
            )}
          </div>
        </div>

        {/* Stats Cards */}
        <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
          <div className="bg-white dark:bg-gray-900 border border-gray-100 dark:border-gray-800 rounded-xl p-6 hover:shadow-sm transition-shadow duration-200">
            <div className="flex items-center">
              <div className="flex-shrink-0">
                <Users className="h-6 w-6 text-gray-600 dark:text-gray-400" />
              </div>
              <div className="ml-4">
                <p className="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide">
                  Total Candidates
                </p>
                <p className="text-2xl font-light text-gray-900 dark:text-gray-100 mt-1">
                  {stats.totalCandidates}
                </p>
              </div>
            </div>
          </div>

          <div className="bg-white dark:bg-gray-900 border border-gray-100 dark:border-gray-800 rounded-xl p-6 hover:shadow-sm transition-shadow duration-200">
            <div className="flex items-center">
              <div className="flex-shrink-0">
                <Calendar className="h-6 w-6 text-gray-600 dark:text-gray-400" />
              </div>
              <div className="ml-4">
                <p className="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide">
                  This Month
                </p>
                <p className="text-2xl font-light text-gray-900 dark:text-gray-100 mt-1">
                  {stats.candidatesThisMonth}
                </p>
              </div>
            </div>
          </div>

          <div className="bg-white dark:bg-gray-900 border border-gray-100 dark:border-gray-800 rounded-xl p-6 hover:shadow-sm transition-shadow duration-200">
            <div className="flex items-center">
              <div className="flex-shrink-0">
                <FileText className="h-6 w-6 text-gray-600 dark:text-gray-400" />
              </div>
              <div className="ml-4">
                <p className="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide">
                  CVs Uploaded
                </p>
                <p className="text-2xl font-light text-gray-900 dark:text-gray-100 mt-1">
                  {stats.candidatesWithCV}
                </p>
              </div>
            </div>
          </div>

          <div className="bg-white dark:bg-gray-900 border border-gray-100 dark:border-gray-800 rounded-xl p-6 hover:shadow-sm transition-shadow duration-200">
            <div className="flex items-center">
              <div className="flex-shrink-0">
                <Download className="h-6 w-6 text-gray-600 dark:text-gray-400" />
              </div>
              <div className="ml-4">
                <p className="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide">
                  Top Framework
                </p>
                <p className="text-lg font-light text-gray-900 dark:text-gray-100 mt-1">
                  {stats.topFramework}
                </p>
              </div>
            </div>
          </div>
        </div>

        {/* Candidates Table */}
        <div className="bg-white dark:bg-gray-900 border border-gray-100 dark:border-gray-800 rounded-xl overflow-hidden">
          <CandidateDataTable
            data={candidates}
            columns={candidateColumns}
            title="Candidate Applications"
            pageSize={15}
            searchable={true}
            exportable={true}
          />
        </div>
      </div>
    </div>
  )
}
