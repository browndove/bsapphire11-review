// Function to download CV
const downloadCV = async (fileId: string, filename: string) => {
  try {
    const response = await fetch(`/api/cv-files/${fileId}`)
    if (response.ok) {
      const blob = await response.blob()
      const url = window.URL.createObjectURL(blob)
      const a = document.createElement('a')
      a.href = url
      a.download = filename
      a.click()
      window.URL.revokeObjectURL(url)
    } else {
      console.error('Failed to download CV')
    }
  } catch (error) {
    console.error('Error downloading CV:', error)
  }
}

// Action handlers for candidate operations
const handleMarkAsRead = async (candidate: Candidate, toast: any, setCandidates: any) => {
  try {
    const response = await fetch(`/api/candidates/${candidate.id}`, {
      method: 'PUT',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ action: 'read', value: !candidate.is_read })
    });

    if (response.ok) {
      const result = await response.json();
      setCandidates((prev: Candidate[]) => 
        prev.map(c => c.id === candidate.id ? { ...c, is_read: !candidate.is_read } : c)
      );
      toast({
        title: candidate.is_read ? "Marked as Unread" : "Marked as Read",
        description: `${candidate.first_name} ${candidate.last_name} has been ${candidate.is_read ? 'marked as unread' : 'marked as read'}.`,
      });
    } else {
      throw new Error('Failed to update read status');
    }
  } catch (error) {
    toast({
      title: "Error",
      description: "Failed to update read status. Please try again.",
      variant: "destructive",
    });
  }
}

const handleStarCandidate = async (candidate: Candidate, toast: any, setCandidates: any) => {
  try {
    const response = await fetch(`/api/candidates/${candidate.id}`, {
      method: 'PUT',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ action: 'star', value: !candidate.is_starred })
    });

    if (response.ok) {
      const result = await response.json();
      setCandidates((prev: Candidate[]) => 
        prev.map(c => c.id === candidate.id ? { ...c, is_starred: !candidate.is_starred } : c)
