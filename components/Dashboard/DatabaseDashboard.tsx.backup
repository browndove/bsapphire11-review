      });
    } else {
      throw new Error('Failed to update star status');
    }
  } catch (error) {
    toast({
      title: "Error",
      description: "Failed to update star status. Please try again.",
      variant: "destructive",
    });
  }
}

const handleDeleteCandidate = async (candidate: Candidate, toast: any, setCandidates: any) => {
  if (confirm(`Are you sure you want to delete ${candidate.first_name} ${candidate.last_name}? This action cannot be undone.`)) {
    try {
      const response = await fetch(`/api/candidates/${candidate.id}`, {
        method: 'DELETE'
      });

      if (response.ok) {
        setCandidates((prev: Candidate[]) => prev.filter(c => c.id !== candidate.id));
        toast({
          title: "Candidate Deleted",
          description: `${candidate.first_name} ${candidate.last_name} has been permanently deleted.`,
        });
      } else {
        throw new Error('Failed to delete candidate');
      }
    } catch (error) {
      toast({
        title: "Error",
        description: "Failed to delete candidate. Please try again.",
        variant: "destructive",
      });
    }
  }
}

const handleEmailCandidate = (candidate: Candidate, toast: any) => {
  window.open(`mailto:${candidate.email}`, '_blank')
  toast({
    title: "Email Client Opened",
    description: `Opening email to ${candidate.first_name} ${candidate.last_name}`,
  });
}

const handleArchiveCandidate = async (candidate: Candidate, toast: any, setCandidates: any) => {
  try {
    const response = await fetch(`/api/candidates/${candidate.id}`, {
      method: 'PUT',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ action: 'archive', value: true })
    });

    if (response.ok) {
      setCandidates((prev: Candidate[]) => prev.filter(c => c.id !== candidate.id));
      toast({
        title: "Candidate Archived",
        description: `${candidate.first_name} ${candidate.last_name} has been archived.`,
      });
    } else {
      throw new Error('Failed to archive candidate');
    }
  } catch (error) {
    toast({
      title: "Error",
      description: "Failed to archive candidate. Please try again.",
      variant: "destructive",
    });
  }
}

